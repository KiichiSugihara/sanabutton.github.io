{
  "private": true,
  "name": "sanabutton.github.io",
  "scripts": {
    "build": "run-s build:parcel build:jekyll",
    "build:frontend": "parcel build _frontend/main.ts _frontend/main-async.ts",
    "build:backend": "bundle exec jekyll build build",
    "watch": "run-p watch:*",
    "watch:frontend": "parcel watch _frontend/main.ts _frontend/main-async.ts",
    "watch:backend": "bundle exec jekyll build --watch",
    "serve": "run-p watch:parcel serve:jekyll",
    "serve:backend": "bundle exec jekyll serve --watch"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.3",
    "parcel-bundler": "^1.10.3",
    "typescript": "^3.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
