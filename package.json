{
  "private": true,
  "name": "sanabutton.github.io",
  "scripts": {
    "test": "run-p lint test:*",
    "test:small": "node --version",
    "build": "run-s build:frontend build:backend",
    "build:frontend": "parcel build _frontend/main.ts _frontend/main-async.ts",
    "build:backend": "bundle exec jekyll build",
    "watch": "run-p watch:*",
    "watch:frontend": "parcel watch _frontend/main.ts _frontend/main-async.ts",
    "watch:backend": "bundle exec jekyll build --watch",
    "serve": "run-p watch:frontend serve:backend",
    "serve:backend": "bundle exec jekyll serve --watch",
    "lint": "run-p lint:*",
    "lint:typescript": "prettier -l \"**/*.ts\"",
    "lint:markdown": "prettier -l \"**/*.md\"",
    "fmt": "run-s format",
    "format": "run-p format:*",
    "format:typescript": "prettier --write \"**/*.ts\"",
    "format:markdown": "prettier --write \"**/*.md\""
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.10.3",
    "prettier": "^1.15.3",
    "typescript": "^3.2.1"
  }
}
